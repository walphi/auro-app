{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowJs": true,
        "baseUrl": "./",
        "sourceMap": true,
        "declaration": true
    },
    "include": [
        "netlify/functions/**/*",
        "lib/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}